# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copie este arquivo para .env.production
# e preencha com seus valores reais

# ============================================
# DOMAIN CONFIGURATION
# ============================================
# Domínio principal da aplicação
DOMAIN=nfc.example.com

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Formato: postgresql://user:password@host:port/database
DB_NAME=nfc_management
DB_USER=nfc_user
DB_PASSWORD=your_secure_password_here_change_this

# ============================================
# MANUS OAUTH CONFIGURATION
# ============================================
VITE_APP_ID=your_manus_app_id_here
OAUTH_SERVER_URL=https://api.manus.im
VITE_OAUTH_PORTAL_URL=https://portal.manus.im

# ============================================
# SECURITY
# ============================================
# JWT Secret para assinatura de sessões
JWT_SECRET=your_jwt_secret_key_here_change_this_to_something_long_and_random

# Código secreto para registrar administradores via interface
REGISTRATION_SECRET=
VITE_REGISTRATION_SECRET=

# ============================================
# OWNER INFORMATION
# ============================================
OWNER_NAME=Your Name
OWNER_OPEN_ID=your_open_id_from_manus

# ============================================
# MANUS BUILT-IN APIS
# ============================================
BUILT_IN_FORGE_API_URL=https://api.manus.im
BUILT_IN_FORGE_API_KEY=your_forge_api_key_here
VITE_FRONTEND_FORGE_API_URL=https://api.manus.im
VITE_FRONTEND_FORGE_API_KEY=your_frontend_forge_api_key_here

# ============================================
# ANALYTICS (OPTIONAL)
# ============================================
VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
VITE_ANALYTICS_WEBSITE_ID=your_website_id_here

# ============================================
# APP CONFIGURATION
# ============================================
VITE_APP_TITLE=Sistema de Gerenciamento de Gravações NFC
VITE_APP_LOGO=/logo.png

# ============================================
# TRAEFIK CONFIGURATION
# ============================================
# Usuário e senha para dashboard do Traefik
# Gere com: htpasswd -nb admin password
TRAEFIK_USER=admin:$apr1$H6uskkkW$IgstNWde3R9t7gLhNOHO91
TRAEFIK_PASSWORD=$apr1$H6uskkkW$IgstNWde3R9t7gLhNOHO91

# Cloudflare DNS (opcional, para DNS challenge)
# Descomente se usar Cloudflare para DNS
# CF_API_EMAIL=your_cloudflare_email@example.com
# CF_API_KEY=your_cloudflare_api_key
# CF_DNS_API_TOKEN=your_cloudflare_dns_api_token

# ============================================
# PGADMIN CONFIGURATION (OPCIONAL)
# ============================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=your_pgadmin_password_here

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=production
